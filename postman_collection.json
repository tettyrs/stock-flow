{
    "info": {
        "name": "StockFlow API",
        "description": "API Collection for StockFlow Service",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:8080",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "1. Create Item (Pen)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n\t\"name\": \"Pen\",\n\t\"price\": 5.0\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/api/items",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "items"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "2. Get All Items",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/items",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "items"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "3. Add Inventory (TopUp)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n\t\"itemId\": 1,\n\t\"qty\": 10,\n\t\"type\": \"T\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/api/inventory",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "inventory"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "4. Place Order (Success)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n\t\"orderNo\": \"O001\",\n\t\"itemId\": 1,\n\t\"qty\": 5,\n\t\"price\": 5.0\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/api/orders",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "orders"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "5. Place Order (Insufficient Stock)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n\t\"orderNo\": \"O002\",\n\t\"itemId\": 1,\n\t\"qty\": 6,\n\t\"price\": 5.0\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/api/orders",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "orders"
                    ]
                }
            },
            "response": []
        }
    ]
}